<Window x:Class="Para3WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Para3WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Заказ пиццы" HorizontalAlignment="Center" 
            Margin="5" FontSize="22" Grid.Row="0"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <TextBlock Text="Размер:" Margin="5" FontSize="22"/>
            <StackPanel Margin="12">
                <RadioButton GroupName="Size" Content="Маленькая" Margin="5" FontSize="18"/>
                <RadioButton GroupName="Size" Content="Средняя" Margin="5" FontSize="18"/>
                <RadioButton GroupName="Size" Content="Большая" Margin="5" FontSize="18" />
            </StackPanel>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <TextBlock Text="Добавки:" Margin="5" FontSize="22"/>
            <StackPanel>
                <CheckBox Content="Сыр" Margin="5" FontSize="18"/>
                <CheckBox Content="Грибы" Margin="5" FontSize="18"/>
                <CheckBox Content="Пепперони" Margin="5" FontSize="18"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Количество:" Margin="5" FontSize="22"/>
            <Slider Grid.Column="1" Minimum="1" Maximum="10" Value="5"/>
            <TextBlock Grid.Column="2" Text="штук"  Margin="5" FontSize="22"/>
        </Grid>

        <StackPanel Grid.Row="4" Margin="10">
            <TextBlock Text="Комментарий" Margin="5" FontSize="22"/>
            <TextBox MaxLength="200" AcceptsReturn="True" Height="75" FontSize="18"/>
        </StackPanel>
        
        <Button Grid.Row="5" VerticalAlignment="Bottom" Content="Оформить заказ" Height="50" FontSize="22" Margin="5"/>
    </Grid>
</Window>
